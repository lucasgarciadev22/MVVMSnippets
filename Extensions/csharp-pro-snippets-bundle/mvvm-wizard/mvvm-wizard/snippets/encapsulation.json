{
    "EncapsulateBoolProperty": {
        "prefix": "encbool",
        "body": [
            "private bool _$privateProp$ = $defaultValue$;",
            "",
            "public bool $publicProp$",
            "{",
            "\tget => _$privateProp;",
            "\tset",
            "\t{",
            "\t\tif (_$privateProp == value)",
            "\t\t\treturn;",
            "",
            "\t\t_$privateProp = value;",
            "\t\tOnPropertyChanged(\"$publicProp$\");",
            "\t}",
            "}$end$"
        ],
        "description": "Encapsulates a boolean property with a PropertyChanged notification for MVVM pattern.",
        "author": "Lucas Garcia (lucasgarciadev22)",
        "snippetType": "Expansion",
        "variables": {
			"privateProp": {
				"default": "privateProp",
				"description": "Your non accessible property name",
				"tooltip": "Your non accessible property name"
			},
			"publicProp": {
				"default": "PublicProp",
				"description": "Your public property name",
				"tooltip": "Your public property name"
			},
            "defaultValue": {
                "description": "The default value of the property.",
                "default": "false",
                "tooltip": "The default value of the property."
            }
        }
    },

